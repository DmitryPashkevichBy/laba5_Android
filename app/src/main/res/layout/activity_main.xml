<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/textEdit"
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#0DD3D3D3"
            android:paddingRight="20dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:hint="Введите город"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="SEND"
            android:onClick="ClickButton"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="#0DD3D3D3" >

        <ImageView
            android:id="@+id/weatherImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingTop="20dp"
                android:id="@+id/tempText"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0DD3D3D3"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">


        <TableRow  android:layout_marginHorizontal="5dp">

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Подробная информация"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#99FFFFFF"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="8dp"/>

        <TableRow  android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="Влажность"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left"
                android:paddingRight="15dp"
                android:text="19°C"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            />

        <TableRow  android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="Давление"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left"
                android:paddingRight="15dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"    />

        <TableRow  android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="Скорость ветра"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left"
                android:paddingRight="15dp"
                android:text="22°C"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"    />

        <TableRow  android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="Облачность"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left"
                android:paddingRight="15dp"
                android:id="@+id/clouds"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"    />

        <TableRow  android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="Напрвление ветра"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left"
                android:paddingRight="15dp"
                android:id="@+id/deg"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </TableRow>
    </TableLayout>


</LinearLayout>